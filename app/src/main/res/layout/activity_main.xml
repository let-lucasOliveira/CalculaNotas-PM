<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/calc_btn"
        android:layout_width="217dp"
        android:layout_height="54dp"
        android:layout_marginBottom="36dp"
        android:text="Calcular"
        app:layout_constraintBottom_toTopOf="@+id/clearForm_btn"
        tools:layout_editor_absoluteX="97dp" />

    <Button
        android:id="@+id/clearForm_btn"
        android:layout_width="215dp"
        android:layout_height="57dp"
        android:layout_marginBottom="44dp"
        android:text="Limpar"
        app:layout_constraintBottom_toTopOf="@+id/average_txtv"
        tools:layout_editor_absoluteX="99dp" />

    <EditText
        android:id="@+id/faltas_txt"
        android:layout_width="311dp"
        android:layout_height="35dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/calc_btn"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/subject_txt"
        android:layout_width="313dp"
        android:layout_height="38dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        tools:layout_editor_absoluteX="46dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="111dp"
        android:layout_height="18dp"
        android:layout_marginBottom="8dp"
        android:text="Disciplina"
        app:layout_constraintBottom_toTopOf="@+id/subject_txt"
        tools:layout_editor_absoluteX="47dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="21dp"
        android:text="Faltas"
        app:layout_constraintBottom_toTopOf="@+id/faltas_txt"
        tools:layout_editor_absoluteX="49dp" />

    <EditText
        android:id="@+id/nota1_txt"
        android:layout_width="311dp"
        android:layout_height="39dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        tools:layout_editor_absoluteX="48dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="101dp"
        android:layout_height="19dp"
        android:layout_marginBottom="4dp"
        android:text="Nota 2"
        app:layout_constraintBottom_toTopOf="@+id/nota2_txt"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/nota2_txt"
        android:layout_width="311dp"
        android:layout_height="35dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        tools:layout_editor_absoluteX="49dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="102dp"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:text="Nota 1"
        app:layout_constraintBottom_toTopOf="@+id/nota1_txt"
        tools:layout_editor_absoluteX="48dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="54dp"
        android:layout_height="20dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="20dp"
        android:text="Média"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/average_txtv" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:text="Situação"
        app:layout_constraintEnd_toStartOf="@+id/status_txtv"
        tools:layout_editor_absoluteY="642dp" />

    <TextView
        android:id="@+id/average_txtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="__________"
        app:layout_constraintBottom_toTopOf="@+id/status_txtv"
        tools:layout_editor_absoluteX="249dp" />

    <TextView
        android:id="@+id/status_txtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="___________"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="642dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Calcula média"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        tools:layout_editor_absoluteX="161dp" />

</androidx.constraintlayout.widget.ConstraintLayout>